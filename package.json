{
  "name": "haxiom-site",
  "version": "1.0.0",
  "description": "Haxiom's website",
  "main": "src/index.js",
  "scripts": {
    "test": "standard | snazzy",
    "build:prod": "browserify src/index.js -o public/bundle.js",
    "start": "budo . -d public/ --serve bundle.js --live --onupdate 'standard'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haxiom/haxiom-site.git"
  },
  "keywords": [
    "haxiom",
    "website"
  ],
  "author": "haxiom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haxiom/haxiom-site/issues"
  },
  "homepage": "https://github.com/haxiom/haxiom-site#readme",
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "budo": "^8.0.4",
    "snazzy": "^3.0.0",
    "standard": "^6.0.5"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "lodash.defaults": "^4.0.1",
    "whatwg-fetch": "^0.11.0"
  },
  "standard": {
    "globals": [
      "fetch"
    ]
  }
}
